{
  "name": "workout-buddy",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "prepare": "husky",
    "dev:client": "pnpm --filter client dev",
    "build:client": "pnpm --filter client build",
    "dev:server": "cd server && uv run uvicorn app.main:app --reload --host 0.0.0.0 --port 7001",
    "test:server": "cd server && uv run pytest",
    "lint:server": "cd server && uv run ruff check .",
    "format:server": "cd server && uv run ruff format .",
    "type-check:server": "cd server && uv run mypy app",
    "precommit:server": "uv run --directory server pre-commit run --all-files"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "client/**/*.{js,jsx,ts,tsx}": [
      "pnpm --filter client exec prettier --write",
      "pnpm --filter client exec eslint --fix --max-warnings 0"
    ],
    "client/**/*.{json,css,md}": [
      "pnpm --filter client exec prettier --write"
    ]
  }
}
