# ============================================================================
# Workout Buddy API - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ----------------------------------------------------------------------------
# Application Settings (base_settings.py)
# ----------------------------------------------------------------------------
APP_NAME=Workout Buddy API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_V1_PREFIX=/api/v1

# ----------------------------------------------------------------------------
# Security Settings (security_settings.py)
# ----------------------------------------------------------------------------
# CRITICAL: Change SECRET_KEY in production!
# Generate with: openssl rand -hex 32
SECRET_KEY=dev-secret-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database connection string
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://dev:devpass@localhost:5433/workout_buddy_dev

# CORS allowed origins (comma-separated list)
CORS_ORIGINS=["http://localhost:7002"]

# ----------------------------------------------------------------------------
# OAuth Settings (oauth_settings.py)
# ----------------------------------------------------------------------------
# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:7002

# Google OAuth (Free - Get from: https://console.cloud.google.com/)
# 1. Create a new project
# 2. Enable Google+ API
# 3. Create OAuth 2.0 credentials
# 4. Add authorized redirect URI: http://localhost:7001/api/v1/auth/oauth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:7001/api/v1/auth/oauth/google/callback
